<!doctype html>
<html lang="en">
<head>
<meta charset="utf-8">
<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
<title>CIAOBRAND</title>
<meta name="keywords" content=""/>
<meta name="description" content="">
<meta name="viewport" content="width=device-width">
<link rel="stylesheet" href="/css/common.css">
<link rel="stylesheet" href="/css/collections.css">
</head>
<body>
	<div class="contentbox">
		<header>
			<div id="header">
				<h1><a href="/">CIAOBRAND</a></h1>
				<a href="javascript:;" class="changelanguage">English</a>
			</div>
		</header>
	</div>
	<div class="container">
		<div class="contentbox">
			<div class="navigation">
				<ul>
					<li><a href="/about">about ciaobrand</a></li>
					<li><a href="/design">ciao design</a></li>
					<li class="first">
						<p class="bottom">collections</p>
						<ul class="second">
							<li <% if(mark=="bags") { %>class="index"<% } %> ><a href="/collections/edit/bags">hand bags</a></li>
							<li <% if(mark=="wallets") { %>class="index"<% } %> ><a href="/collections/edit/wallets">wallets</a></li>
							<li <% if(mark=="accessories") { %>class="index"<% } %>><a href="/collections/edit/accessories">accessories</a></li>
						</ul>
					</li>
					<li><a href="/goddess">ciao's goddess</a></li>
					<li><a href="/contact">contact us</a></li>
				</ul>
			</div>
			<div class="content">
				<div class="collections">
					<div class="handbags_product">
						<p><a class='left' href="/collections/<%= type %>">back</a></p>
						<div class="product">
							<div class="img">
								<img src="<%= entity.detail_pictures[0].url.replace(/@/g,"/") %>"/>
								<div class="border"></div>
							</div>
							<div class="subcontent">
								<div class="intro">
									<p class="style">STYLE NO. <span><%= entity.style_no %></span></p>
									<div class="brand">
										<p class="title"><%= entity.title %></p>
										<p class="name"><%= entity.sub_title %></p>
										<p class="size">DIMENSIONS:  <%= entity.dimension %> </p>
										<p class="price">$<%= entity.price %></p>
									</div>
								</div>
								<div class="product_list editProductlists">
									<ul>
										<% entity.detail_pictures.forEach(function(picture){ %>
								        	<li id="<%= picture.url %>" name="<%= entity._id %>"><img src="<%= picture.url.replace(/@/g,"/") %>"/></li>
								        <% }); %>
								        <li class="addMore"><i></i></li>
									</ul>
								</div>
							</div>
							
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
	<div class="contentbox">
		<footer>
			<div id="footer">
				<p>@2015 CIAOBRAND</p>
			</div>
		</footer>
	</div>
	<div class="popup">
		<p class="close">close</p>
		<div class="popupContent">
			<div class="uploadImage">
				<form id="uploadForm" enctype="multipart/form-data" action = "/upload/collections/<%= entity._id%>" method = "post">
	              <input type="file" name="picture" id="file"/>
	              <input type="submit" value="Upload" name="submit">
	            </form>
				<div id="image-wrap"></div>
			</div>
		</div>
	</div>
	<script src="/javascript/jquery-1.7.1.min.js"></script>
	<script src="/javascript/collections_edit.js"></script>
	<script src="/javascript/common.js"></script>
	<script src="/javascript/image-file-visible.js"></script>
</body>
</html>